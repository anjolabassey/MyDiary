{
  "extends": "airbnb",
  "rules": {
    "no-console": 0,
    "no-unused-vars": 1,
    "no-plusplus": 0,
    "quote-props": 0,
    "eol-last": 0,
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "no-lonely-if": 0,
    "comma-dangle": 0,
    "arrow-body-style": 0,
    "no-else-return": 0,
    "curly": [2, "multi-line"],
    "no-shadow": [2, { "allow": ["req", "res", "err"] }],
    "linebreak-style": 0,      
    "require-jsdoc": [2, {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true
      }
    }]
  }
}